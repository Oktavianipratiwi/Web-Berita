body{
	background-color: gainsboro;
}
.badan-utama {
	max-width: 1080px;
	margin: 20px auto;
	background-color: white;
	overflow: hidden;
}
.media-sosial{
	text-align: right;
	margin-right: 5px;
	margin-top: 5px;
	margin-bottom: 5px;
}
.media-sosial img{
	width: 30px;
	height: 30px;
	border-radius: 50%;
	padding: 2px;
}

.media-sosial a{
	text-decoration: none;
}

.media-sosial hr{
	border-top: 1px dashed red;
	margin-left: 5px;
}

.navigasi ul{
	list-style-type: none;
	margin: 0;
	padding: 0;
	overflow: hidden;
	background-color: black;
	font-family: Arial, Helvetica, sans-serif;
	font-size: 15px;
	font-weight: bold;
}

.navigasi li{
	float: left;
}

.navigasi a{
	display: block;
	color: white;
	padding: 10px 20px;
	text-align:center;
	text-decoration:none;
}

.navigasi li a:hover{
	background-color: red;
	transition-duration:2s;
}

.header-kiri{
	width: 550px;
	float: left;
	padding-top : 15px;
	padding-left : 15px;
	padding-right : 5px;
	
}

.header-kiri img{
	width:100%;
	height: 330px;
}

.header-kanan {
	width: 240px;
	float: left;
	padding-top: 15px;
	padding-right: 15px;
}

.header-kanan img{
	width:100%;
	height:155px;	
}

.menu-kiri {
	width: 250px;
	margin-right: 10px;
	float: left;
	clear: both;
	padding-top: 12px;
	padding-left: 12px;
}

.judul {
	background-color: red;
	border-bottom: 3px solid red;
	color: white;
	padding-left: 5px;
	padding-right: 5px;
	padding-top: 3px;
	border-top-left-radius: 10px;
}

.kotak{
	border-top: 3px solid red;
	margin-bottom: 5px;
}

.menu-kiri a{
	text-decoration: none;
	color: blue;
}

.menu-kiri img{
	width: 100%
}

.menu-tengah {
	width: 530px;
	margin-right: 10px;
	float: left;
	padding-top: 15px;
}

.menu-tengah h2{
	text-align:center;
	color:blue;
	
}
.menu-tengah .artikel{
	font-family: Arial, Helvetica, sans-serif;
	text-align: justify
}

.menu-tengah table{
	width: 100%;
}

.menu-tengah table td{
	width: 50%;
}

.menu-tengah img{
	width: 100%;
}

.tanggal-posting{
	color: silver;
	margin-bottom: 10px;
	display: block;
	font-size: 12px;
	text-align: right;
	margin-top: 5px;
	font-weight: bold;
}

.menu-tengah a{
	text-decoration: none;
	color: green;
	font-weight: bold;
}
.menu-kanan {
	width: 250px;
	float: left;
	padding-top: 15px;
	margin-bottom: 15px;
}

.menu-kanan video,audio{
	width: 100%;
}
footer{
	float: left;
	color: white;
	background-color: black;
	padding: 15px;
	font-family: Arial, Helvetica, sans-serif;
	font-size: 15px;
	font-weight: bold;
	text-align: justify;
}
.footer-kiri {
	width: 517px;
	float: left;
	padding-right: 16px;
}

.footer-kanan {
	width:517px;
	float:left;
}
@media screen and (max-width:1080px){
	badan-utama {
		width:100%;
	}
	.header-kiri,
	.menu-tengah,
	.menu-kiri,
	.menu-kanan{
		width:100%;
		float:left;
		margin: 0;
		padding: 0;
	}
	.header-kanan{
		width: 50%;
		float: left;
		margin:0;
		padding:0;;
	}
}
@media screen and (max-width:780px){
	badan-utama {
		width:100%;
	}
	.header-kiri,
	.menu-tengah,
	.menu-kiri,
	.menu-kanan{
		width:100%;
		float:left;
		margin: 0;
		padding: 0;
	}
	.header-kanan{
		width: 50%;
		float: left;
		margin:0;
		padding:0;;
	}
}